{% extends 'base.twig' %}


{% block css %}
<link href="style/flex.css" rel="stylesheet" />
<style type="text/css">
label.large-font {
	font-size:2rem;
}
footer.page-footer{
	position:fixed;
	bottom: 0px;
	width:100%;
}
main {
	padding-bottom: 70px;
}
</style>
{% endblock %}

{% block left_nav %}{% endblock %}

{% block content %}
<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<span class="card-title black-text">Welcome!</span>
				<img src="img/welcome.jpg" id="image" />
				<p class="flow-text">
					Thanks for downloading Fit &amp; Well! This app is designed to help you integrate a personalised fitness schedule with your busy academic and social life. Just sync your timetable, set up your personal goals and go! You'll be able to log your activity in real time, see how your fitness develops, and even compete with others on the leaderboard if you like some competition. Enjoy!
				</p>
			</div>
		</div>
	</div>
	{#<div class="col s12">
		<div class="card">
			<div class="card-content">
				<span class="card-title black-text">Goals</span>
				<div id="goals">
					<input type="text" class="col s4" placeholder="Quantity" />
					<select class="browser-default col s4">
						<option value="hour">Hours</option>
						<option value="minute">Minutes</option>
						<option value="calorie">Calories</option>
						<option value="workout">Workouts</option>
					</select>
					<select class="browser-default col s3">
						<option value="daily">Daily</option>
						<option value="weekly">Weekly</option>
						<option value="monthly">Monthly</option>
					</select>
					<a href="#!" class="delete col s1 flex-row justify-center align-center black-text" data-row="0"><i class="material-icons">close</i></a>
				</div>
				<div class="card-action">
					<a href="#!" class="black-text" id="new-goal"><i class="material-icons">add</i></a>
				</div>
			</div>
		</div>
	</div>

	<div class="col s12">
		<div class="card">
			<div class="card-content" id="pair">
				<span class="card-title black-text">Smart Device</span>
				<button class="waves-effect waves-light btn">Pair</button>
			</div>
		</div>
	</div>

	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<span class="card-title black-text">Info</span>
				<div class="row">
					<h4 class="col s3">Height:</h4>
					<input type="text" class="col s5 offset-s1" value={{state.info.height}} />
					<select class="browser-default col s2 offset-s1">
						<option value="in">in</option>
						<option value="cm">cm</option>
					</select>
				</div>
