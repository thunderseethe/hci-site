{% block css %}
<style type="text/css">
.center {
	text-align: center;
}
.container .row div {
	margin-top:5px;
}
.container .row div.skip {
	margin-top:25px;
}
div.flow-text {
	margin-bottom:10px;
}
ul.left, ul.left li, ul.left li a {
	height:100%;
}
</style>
{% endblock %}

{% block left_nav %}
<ul class="left">
	<li><a href="setup?state=first" class="nav-item"><i class="material-icons">arrow_back</i></a></li>
</ul>
{% endblock %}

