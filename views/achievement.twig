{% extends 'base.twig' %}

{% block css %}
<style type="text/css">
i.material-icons {
	font-size:30px;
}
</style>
{% endblock %}

{% block content %}
<ul class="collection">
	{% for item in achievements %}
		<li class="collection-item row">
			<div class="col s2">
				<i class="material-icons">{{item.icon}}</i>
			</div>
			<div class="col s8 flow-text">
				{{item.name}}
			</div>
			<div class="col s2">
				{% if item.complete %}
					<i class="material-icons complete yellow-text darken-2">star</i>
				{% endif %}
			</div>
		</li>
	{% endfor %}
</ul>
{% endblock %}