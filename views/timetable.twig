{% extends 'base.twig' %}

{% block css %}
<link href="style/flex.css" rel="stylesheet" />
<style type="text/css">
a.collection-item.flex-row{
	display:flex;
}
.collection {
	margin-top:0;
	margin-bottom:0;
	border:none;
}
.card-title{
	width:100%;
}
a.timetable i{
	transition: box-shadow 0.3s ease-in-out;
	border-radius:5px;
	font-size:28px;
}
a.timetable:hover i{
	box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
	/*box-shadow: 0 8px 17px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);*/
}
</style>
{% endblock %}

{% block content %}
<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<span class="card-title flex-row justify-between align-center black-text">
					<a href="#!" class="black-text timetable"><i class="material-icons">keyboard_arrow_left</i></a>
					{{day}}
					<a href="#!" class="black-text timetable"><i class="material-icons">keyboard_arrow_right</i></a>
				</span>		
				<div class="collection">
					{% for slot in slots %}
						<a href="{{slot.link}}" class="collection-item flex-row justify-between align-center black-text {{slot.category}}">
							<span>{{slot.time}}</span>
							<span>{{slot.name}}</span>
							<span>{{slot.location}}</span>
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<span class="card-title black-text">Around Town</span>
				<div class="collection">
					{% for row in around %}
						<a href="{{row.link}}" class="collection-item black-text">
							{{row.name}}
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}