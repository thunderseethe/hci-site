{% extends 'base.twig' %}

{% block css %}
<link href="style/flex.css" rel="stylesheet" />
<style type="text/css">
a.collection-item.flex-row{
	display:flex;
}
.collection {
	margin-top:0;
	margin-bottom:0;
	border:none;
}
.card-title{
	width:100%;
}
a.timetable i{
	font-size:28px;
}
div.card-content.row {
	margin-bottom: 0px;
}
div.card-content.row a {
	margin-bottom: 10px;
}
</style>
{% endblock %}

{% block content %}
<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<span class="card-title flex-row justify-between align-center black-text">
					<a href="{{prev|default("#!")}}" class="{{ prev is not defined ? "disabled "}}prev waves-effect waves-dark btn-flat timetable">
						<i class="material-icons">keyboard_arrow_left</i>
					</a>
					{{day}}
					<a href="{{next|default("#!")}}" class="{{ next is not defined ? "disabled " }}next waves-effect waves-dark btn-flat timetable">
						<i class="material-icons">keyboard_arrow_right</i>
					</a>
				</span>		
				<div class="collection">
					{% for slot in slots %}
						<a href="{{slot.link}}" class="collection-item flex-row justify-between align-center black-text {{slot.category}}">
							<span>{{slot.time}}</span>
							<span>{{slot.name}}</span>
							<span>{{slot.location}}</span>
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<div class="col s12">
		<div class="card">
			<div class="card-content row">
				<a class="waves-effect waves-light btn-large green darken-1 col s12">Schedule Activity</a>
			</div>
		</div>
	</div>

	<div class="col s12">
		<div class="card">
			<div class="card-content row">
				<a class="waves-effect waves-light btn-large orange darken-2 col s12">Gym Timetable</a>
				<a class="waves-effect waves-light btn-large blue darken-1 col s12">My Timetable</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}